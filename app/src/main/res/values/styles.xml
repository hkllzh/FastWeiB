<resources>

    <style name="WBBaseTheme" parent="Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black_3</item>
        <item name="android:textSize">@dimen/text_size_normal</item>

        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        
    </style>

    <style name="WBTheme" parent="WBBaseTheme">

    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">

        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否显示title -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置dialog的背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景是否模糊显示 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 动画效果 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>
    </style>

    <style name="BaseDialog.Loading" parent="BaseDialog">
        <!-- 背景是否模糊显示 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 动画效果 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    
    <style name="line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>
